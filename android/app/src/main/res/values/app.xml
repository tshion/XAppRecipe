<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- アプリ配色ルール -->
    <color name="app_accent">#E15A28</color>
    <color name="app_base">#A1B2BD</color>
    <color name="app_base_2">#FFFFFF</color>
    <color name="app_main">#111122</color>
    <color name="app_main_dark">#000011</color>

    <!-- 文字色 -->
    <color name="app_text">#000000</color>
    <color name="app_text_accent">@color/app_accent</color>
    <color name="app_text_contrast">#FFFFFF</color>
    <color name="app_text_weak">#444444</color>

    <!-- 透過色 -->
    <color name="app_transparent">#00000000</color>
    <color name="app_transparent_dark">#44000000</color>


    <!-- 余白関連 -->
    <dimen name="app_space_1">8dp</dimen>
    <dimen name="app_space_2">16dp</dimen>
    <dimen name="app_space_3">24dp</dimen>
    <dimen name="app_space_4">32dp</dimen>
    <dimen name="app_space_5">40dp</dimen>

    <!-- 文字サイズ -->
    <dimen name="app_text_large_xx">20sp</dimen>
    <dimen name="app_text_large_x">18sp</dimen>
    <dimen name="app_text_large">16sp</dimen>
    <dimen name="app_text_normal">14sp</dimen>
    <dimen name="app_text_small">12sp</dimen>
    <dimen name="app_text_small_x">10sp</dimen>


    <!-- アクション名 -->
    <string name="app_action_capture">撮影</string>
    <string name="app_action_close">閉じる</string>
    <string name="app_action_delete">削除</string>
    <string name="app_action_login">ログイン</string>
    <string name="app_action_logout">ログアウト</string>

    <string name="app_name">XAppRecipe</string>
    <string name="custom_url_scheme">@string/package_name</string>
    <string name="package_name">com.github.tshion.xapprecipe.webapp</string>


    <!-- アプリ基本テーマ -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/app_main</item>
        <item name="colorPrimaryVariant">@color/app_main</item>
        <item name="colorOnPrimary">@color/app_text_contrast</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Icon -->
        <item name="navigationIcon">@drawable/icon_arrow_back</item>
    </style>

    <!-- アプリ基本テーマ(ツールバーなし) -->
    <style name="AppTheme.NoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/app_main</item>
        <item name="colorPrimaryVariant">@color/app_main</item>
        <item name="colorOnPrimary">@color/app_text_contrast</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <!-- アプリ起動テーマ -->
    <style name="AppTheme.Launch" parent="AppTheme.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <!-- アプリ起動テーマ(Native 用) -->
    <style name="AppTheme.Launch.Native" parent="AppTheme.NoActionBar">
        <item name="android:windowBackground">@drawable/app_launcher</item>
    </style>
</resources>
