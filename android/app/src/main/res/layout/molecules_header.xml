<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/molecules_header"
    tools:layout_height="?attr/actionBarSize"
    tools:layout_width="match_parent"
    tools:parentTag="android.widget.FrameLayout">

    <FrameLayout
        android:id="@+id/molecules_header_back"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:padding="@dimen/app_space_1"
        android:visibility="gone"
        tools:visibility="visible">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:src="@drawable/icon_arrow_back"
            android:tint="@color/app_text_contrast" />
    </FrameLayout>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/molecules_header_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textColor="@color/app_text_contrast"
        android:textSize="@dimen/app_text_large"
        android:textStyle="bold"
        tools:text="タイトル" />
</merge>
