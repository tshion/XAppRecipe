<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_margin="@dimen/app_space_2"
    android:minWidth="320dp"
    android:padding="@dimen/app_space_2">

    <work.shion.xapprecipe.molecules.EditForm
        android:id="@+id/templates_link_insert_dialog_input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/templates_link_insert_dialog_input_title"
        android:inputType="text"
        app:layout_constraintBottom_toTopOf="@id/templates_link_insert_dialog_close"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <work.shion.xapprecipe.atoms.NegativeButton
        android:id="@+id/templates_link_insert_dialog_close"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/app_space_2"
        android:layout_marginEnd="@dimen/app_space_2"
        android:text="@string/app_action_close"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/templates_link_insert_dialog_register"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/templates_link_insert_dialog_input" />

    <work.shion.xapprecipe.atoms.PositiveButton
        android:id="@+id/templates_link_insert_dialog_register"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/app_space_2"
        android:text="@string/templates_link_insert_dialog_register"
        app:layout_constraintBottom_toBottomOf="@id/templates_link_insert_dialog_close"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/templates_link_insert_dialog_close"
        app:layout_constraintTop_toTopOf="@id/templates_link_insert_dialog_close" />
</androidx.constraintlayout.widget.ConstraintLayout>
