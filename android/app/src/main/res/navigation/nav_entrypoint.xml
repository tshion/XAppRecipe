<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_entrypoint"
    app:startDestination="@id/launch">

    <!-- ライセンス表記 -->
    <activity
        android:id="@+id/license"
        android:name="com.google.android.gms.oss.licenses.OssLicensesMenuActivity" />


    <!-- 起動失敗ダイアログ -->
    <dialog
        android:id="@+id/launch_error_dialog"
        android:name="com.github.tshion.xapprecipe.webapp.templates.LaunchErrorDialog">

        <argument
            android:name="requestKey"
            app:argType="string" />
    </dialog>

    <!-- ログアウト確認ダイアログ -->
    <dialog
        android:id="@+id/logout_confirm_dialog"
        android:name="com.github.tshion.xapprecipe.webapp.templates.LogoutConfirmDialog">

        <argument
            android:name="requestKey"
            app:argType="string" />
    </dialog>

    <!-- ログアウト完了ダイアログ -->
    <dialog
        android:id="@+id/logout_finish_dialog"
        android:name="com.github.tshion.xapprecipe.webapp.templates.LogoutFinishDialog">

        <argument
            android:name="requestKey"
            app:argType="string" />
    </dialog>


    <!-- 画像撮影 -->
    <fragment
        android:id="@+id/capture_image"
        android:name="com.github.tshion.xapprecipe.webapp.pages.capture_image.MainFragment"
        tools:layout="@layout/page_capture_image" />

    <!-- ビデオ撮影 -->
    <fragment
        android:id="@+id/capture_video"
        android:name="com.github.tshion.xapprecipe.webapp.pages.capture_video.MainFragment"
        tools:layout="@layout/page_capture_video" />

    <!-- アプリ起動 -->
    <fragment
        android:id="@+id/launch"
        android:name="com.github.tshion.xapprecipe.webapp.pages.launcher.MainFragment"
        tools:layout="@layout/atoms_circle_loading_overlay" />

    <!-- ログイン -->
    <fragment
        android:id="@+id/login"
        android:name="com.github.tshion.xapprecipe.webapp.pages.login.MainFragment"
        tools:layout="@layout/pages_login" >

        <argument
            android:name="canClose"
            app:argType="boolean"
            android:defaultValue="false" />
    </fragment>

    <!-- 生体認証 -->
    <fragment
        android:id="@+id/login_biometric"
        android:name="com.github.tshion.xapprecipe.webapp.pages.login_biometric.MainFragment"
        tools:layout="@layout/page_login_biometric" />

    <!-- メディアコンテンツ一覧 -->
    <fragment
        android:id="@+id/media_list"
        android:name="com.github.tshion.xapprecipe.webapp.pages.media_list.MainFragment"
        tools:layout="@layout/page_media_list" />

    <!-- 通知一覧 -->
    <fragment
        android:id="@+id/notice"
        android:name="com.github.tshion.xapprecipe.webapp.pages.notice.MainFragment"
        tools:layout="@layout/pages_notice" />

    <!-- PDF 表示 -->
    <fragment
        android:id="@+id/pdf_viewer"
        android:name="com.github.tshion.xapprecipe.webapp.pages.pdf_viewer.MainFragment"
        tools:layout="@layout/pages_pdf_viewer" />

    <!-- プロフィール編集 -->
    <fragment
        android:id="@+id/profile_editor"
        android:name="com.github.tshion.xapprecipe.webapp.pages.profile_editor.MainFragment"
        tools:layout="@layout/pages_profile_editor" />

    <!-- トップ -->
    <fragment
        android:id="@+id/top"
        android:name="com.github.tshion.xapprecipe.webapp.pages.top.MainFragment"
        tools:layout="@layout/pages_top">

        <!-- ライセンス表記へ遷移 -->
        <action
            android:id="@+id/navact_to_license"
            app:destination="@id/license" />
    </fragment>

    <!-- チュートリアル -->
    <fragment
        android:id="@+id/tutorial"
        android:name="com.github.tshion.xapprecipe.webapp.pages.tutorial.MainFragment"
        tools:layout="@layout/pages_tutorial" />


    <!-- 起動失敗ダイアログの表示 -->
    <action
        android:id="@+id/navact_show_launch_error_dialog"
        app:destination="@id/launch_error_dialog" />

    <!-- ログアウト確認ダイアログの表示 -->
    <action
        android:id="@+id/navact_show_logout_confirm_dialog"
        app:destination="@id/logout_confirm_dialog" />

    <!-- ログアウト完了ダイアログの表示 -->
    <action
        android:id="@+id/navact_show_logout_finish_dialog"
        app:destination="@id/logout_finish_dialog" />

    <!-- ログインへ遷移 -->
    <action
        android:id="@+id/navact_to_login"
        app:destination="@id/login" />

    <!-- 通知一覧へ遷移 -->
    <action
        android:id="@+id/navact_to_notice"
        app:destination="@id/notice" />

    <!-- トップへ遷移 -->
    <action
        android:id="@+id/navact_to_top"
        app:destination="@id/top"
        app:popUpTo="@id/nav_entrypoint" />

    <!-- チュートリアルへ遷移 -->
    <action
        android:id="@+id/navact_to_tutorial"
        app:destination="@id/tutorial"
        app:popUpTo="@id/nav_entrypoint" />
</navigation>
